/* animation text */
@-webkit-keyframes text {
  0% { color:#FF7E3E; }
  40% { color:#03a9f4; }
  70%,100% { color:#f2f2f2; }
}
@keyframes text {
  0% { color:#FCFD9E; }
  40% { color:#03a9f4; }
  70%,100% { color:#f2f2f2; }
}



/* 任务列表 */
.project-list {
	padding: 0 50rpx 0;
}
.project-box {
	padding: 28rpx 26rpx 28rpx;
	border-radius: 20rpx;
	display: flex;
	flex-direction: column;
	box-shadow: 0 0 2rpx 3rpx rgba(0, 0, 0, 0.1);
}

.project-box .title {
	display: flex;
	align-items: center;
	margin-bottom: 42rpx;
}

.project-box .title .title-icon {
	width: 82rpx;
	height: 82rpx;
	border-radius: 50%;
}

.project-box .title .title-con {
	display: flex;
	flex-direction: column;
	padding-left: 32rpx;
	box-sizing: border-box;
	flex: 1;
}

.project-box .title .title-con .title-name {
	font-size: 28rpx;
	font-weight: 800;
	margin-bottom: 28rpx;
	display: flex;
	align-items: center;
}
.title-con .title-name .name-fg {
	color: #A2A2A2;
	margin: 0 20rpx 0;
}

.title-con .title-name .name-ms {
	color: #2C2C2C;
	font-weight: unset !important;
	font-size: 24rpx;
}

.project-box .title .title-con .title-tag {
	font-size: 20rpx;
	color: #939393;
}
.project-box .content {
	font-size: 24rpx;
}




