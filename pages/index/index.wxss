/* animation text */
@-webkit-keyframes text {
  0% { color:#FF7E3E; }
  40% { color:#03a9f4; }
  70%,100% { color:#f2f2f2; }
}
@keyframes text {
  0% { color:#FCFD9E; }
  40% { color:#03a9f4; }
  70%,100% { color:#f2f2f2; }
}



/* 任务列表 */
.project-list {
	padding: 0 50rpx 0;
}
.project-box {
	padding: 30rpx 0 30rpx;
}
.project-box .title {
	display: flex;
	align-items: center;
	margin-bottom: 26rpx;
}

.project-box .title .title-icon {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	margin-right: 16rpx;
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center;
}

.project-box .title .title-con {
	font-size: 28rpx;
	color: #252525;
	display: flex;
	align-items: center;
	margin-right: 20rpx;
}
.project-box .title .title-con span {
	margin-right: 16rpx;
}

.project-box .title .title-con .iconfont {
	color: #D5BE88;
	font-size: 36rpx;
}

.project-box .title .title-role {
	font-size: 28rpx;
	color: #5F5F5F;
	display: flex;
	align-items: center;
}
.project-box .content {
	display: flex;
	border-bottom: 1rpx solid #EAEAEA;
	padding-bottom: 40rpx;
}
.project-box .content .content-icon {
	width: 154rpx;
	height: 154rpx;
	border-radius: 10rpx;
}

.project-box .content .content-info {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	flex: 1;
	padding-left: 35rpx;
}

.project-box .content .content-info .tag {
	display: flex;
	font-size: 22rpx;
}

.project-box .content .content-info .tag .tag-tit{
	padding: 12rpx 24rpx 12rpx;
	background-color: #F6F6F6;
	margin-right: 10rpx;
}

.project-box .content .content-info-tit {
	font-size: 30rpx;
	font-weight: 700;
}
.project-box .content .content-info-tit > span {
	color: #51C7B7;
}

.bottom-box {
