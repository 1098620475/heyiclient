/* pages/connections-info-edit/index.wxss */
page {
  background-color: #fff;
}

.head-img {
  /* width: 162rpx;
  height: 162rpx; */
  background-color: transparent;
  border: none;
  padding: 0;
  border-radius: 0;
  margin: 0;
  outline: none;
  background-color: transparent;
  border: none;
  box-shadow: none;
  position: relative;
  overflow: initial;
  width: 162rpx;
  height: 162rpx;
}
.head-img .icon {
  position: absolute;
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  background-color: #B8151A;
  z-index: 100;
  bottom: -10rpx;
  right: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 50rpx;
}
.head-img::after {
  display: none;
}
.head-img .icon-touxiang {
  font-size: 60rpx;
  color: #8D8D8D;
}
.head-img .image {
  width: 162rpx;
  height: 162rpx;
  border-radius: 50%;
  background-position: center;
  background-size: cover;
  border: none;
  border: 1rpx solid #B8151A;
}
.head {
  display: flex;
  justify-content: center;
  padding: 80rpx 0 0;
}

.info-box {
  padding: 0 86rpx 0;
}

.info-box-item {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding-bottom: 62rpx;
  border-bottom: 2rpx solid #F9F9F9;
  margin-top: 62rpx;
}

.info-box-item .label {
  color: #111111;
  font-size: 26rpx;
}

.info-box-item input {
    text-align: right;
    direction : ltr;
    color: #8D8D8D;
    height: 100%;
} 

.bottom-padding {
  height: 174px;
}

.bottom-box {
  height: 174rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 35rpx 0;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
}
.submit-btn {
  height: 100rpx;
  background-color: #B8151A;
  width: 100%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
}