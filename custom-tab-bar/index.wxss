
@import '../style/iconfont.wxss';
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* 兼容 iOS < 11.2 */
  height: calc(96rpx + constant(safe-area-inset-bottom));
  /* 兼容 iOS >= 11.2 */
  height: calc(96rpx + env(safe-area-inset-bottom));
  background: #fff;
  display: flex;
  box-shadow: 0px -10rpx 12rpx rgba(0, 0, 0, 0.08);
}
 
.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
 
.tab-bar-item .image {
  width: 48rpx;
  height: 48rpx;
  color: white;
}
 
.bulge {
  background-color: #fff;
}
 
.bulge .image {
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  top: 13rpx;
}
 
.tab-bar-item .tab-bar-view {
  font-size: 20rpx;
}


.block {
  background: #fff;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-box {
  background: #fff;
  width: 100vw;
  height: 440rpx;
  border-top-left-radius: 35rpx;
  border-top-right-radius: 35rpx;
  padding: 0 34rpx 0;
  box-sizing: border-box;
}

.add-box .tit {
  font-size: 26rpx;
  color: #B8151A;
  padding: 34rpx 0 34rpx;
}
.add-box .con {
  display: flex;
  justify-content: space-between;
}
.add-box .con .con-box {
  display: flex;
}
.con-box .image {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background-color: red;
  flex-shrink: 0;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
}
.add-box .con .con-box {
  width: 47%;
  background-color: #FAFAFA;
  border-radius: 15rpx;
  padding: 16rpx 20rpx 16rpx;
  box-sizing: border-box;
}
.add-box .con .content {
  padding-left: 18rpx;
}
.add-box .content-tit {
  font-size: 26rpx;
  margin-bottom: 15rpx;
  color: #282828;
  font-weight: bold;
}
.add-box .content-con {
  font-size: 18rpx;
  color: #999999;
}